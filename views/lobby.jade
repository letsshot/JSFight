doctype
head
	title Welcome to JSFight!
	script(type='text/javascript',src='/javascripts/socket.io.js')
input(type='hidden',value='#{name}',id='playername')
input(type='hidden',value='#{password}',id='password')
#game-area(style='width:800px;height:550px;float:left;background:white;')
	canvas(id="myCanvas",width="800",height="550",style="border:1px solid #d3d3d3;")
#chat-area(style='width:240px;height:450px;float:left;background:gray;')
	#message-apply(style='width:240px;height:35px;background:gray;style="border:1px solid #d3d3d3;')
	#message-pool(style='width:240px;height:380px;background:gray;overflow-y:scroll;overflow-x:hidden')
	#message-control(style='width:240px;height:35px;background:gray;')
		input(id='my-message',type='text',style='width:196px;height:30px')
		input(type='button',value='send',style='width:40px;height:30px',onclick='sendMessage();')
#ladder-area(style='width:110px;height:450px;float:left;background:yellow;overflow-y:scroll;')
script(type='text/javascript',src='/javascripts/game.js')
script(type='text/javascript',src='/javascripts/main.js')